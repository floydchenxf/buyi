<!doctype html>
<html>
<head>
	<meta property="wb:webmaster" content="9fa349f9026fe9f1" />
	<meta name="baidu_union_verify" content="0fb7cf9fd9045c5b2d82a043135ad1ef">
	<meta name="netease_union_tag_verify" content="NjIxOTE0MgoyMDEzLTAyLTIwIDE1OjE5OjMxCklUNUFHWW0yRXdzMmtZRUMwUFVNWDhMMnVicz0="/>
	<title></title>
</head>
<body>
	<div class="global-head">
		<div class="container">
			<div class="w27">
				<a href="/" title="可乐吧">
					<div class="logo" title="愉悦心情，快乐生活">
						<span class="slogan column highlight">愉悦心情，快乐生活</span>
					</div>
				</a>
			</div>
			#if($securityTool.isAuthed())
			#set($currentUser = $securityTool.getMe())
				<div class="w5 login-info">
					<div class="fd-left" style="margin:0 10px;"><img src="$!currentUser.getProfileImage()" class="avatar-tiny">&nbsp;&nbsp;$!{currentUser.username}</div>
					<div class="fd-left"><a href="/member/logout">退出</a></div>
				</div>
			#else
			<div class="w5 login-info">
				<div class="logo_oauth_sina">
					<a href="/bind/oauth_sina" class="bind_sina_weibo">新浪登录</a>
				</div>
			</div>
			#end
		</div>
	</div>
	<sitemesh:write property='body' />
	<sitemesh:decorate decorator='footer.wvm' />
	<div id="dlg_template" class="dialog"></div>
	<sitemesh:decorator name="last-script" append="true">
		$("#dlg_template").jqm({
			trigger: '.jqModal-ajax',
			ajax:'@href',
			ajaxText:'<marquee style="width: 15em;">loading.. ... .</marquee>',
			onShow:function(h){
				var left = $(h.t).parent().offset().left+100;
				var top = $(h.t).parent().offset().top-50;
				h.w.css('left',left);
				h.w.css('top',top);
				h.w.show();},
			onLoad:function(h){
				var left = $(h.t).parent().offset().left+100;
				var top = $(h.t).parent().offset().top-50;
				h.w.css('left',left);
				h.w.css('top',top);
				if($.onDialogLoad){
					if($.onDialogLoad(h))$.onDialogLoad=null;}
			},
			onHide:function(h) {
				if($.onDialogHide) {
					if($.onDialogHide(h)) $.onDialogHide=null;
				}
				h.w.hide();
				if(h.o)
					h.o.remove();
			}
			});
	</sitemesh:decorator>
</body>
</html>